<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/media_fav"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_margin="2dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="60dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/token_fav"
        app:layout_constraintStart_toEndOf="@+id/media_fav"
        app:layout_constraintTop_toTopOf="@+id/media_fav"
        tools:text="TextView" />

    <TextView
        android:id="@+id/token_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/info_fav"
        app:layout_constraintStart_toStartOf="@+id/title_fav"
        app:layout_constraintTop_toBottomOf="@+id/title_fav"
        tools:text="TextView" />

    <TextView
        android:id="@+id/info_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/media_fav"
        app:layout_constraintStart_toStartOf="@+id/token_fav"
        app:layout_constraintTop_toBottomOf="@+id/token_fav"
        tools:text="TextView" />


</androidx.constraintlayout.widget.ConstraintLayout>